<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.foundation.dao.modules.read.medicalHistory.DiseaseHistoryDaoR">
	<!-- 查询字段 -->
	<sql id="Base_Column_List">
		id, 
		user_id as userId, 
		visit_time as visitTime, 
		hospital,
		disease_name as diseaseName, 
		create_by as createBy,
		create_date as createDate, 
		update_by as updateBy,
		update_date as updateDate, 
		del_flag as delFlag, 
		del_date as delDate,
		remarks
	</sql>
	<!-- 根据id查询 -->
	<select id="queryById" parameterType="java.lang.String"
		resultType="com.foundation.dao.entity.medicalHistory.DiseaseHistory">
		select
		<include refid="Base_Column_List" />
		from disease_history
		where id=#{id}
	</select>
	<!-- 分页查询 -->
	<select id="queryPage" parameterType="map"
		resultType="com.foundation.dao.entity.medicalHistory.DiseaseHistory">
		select
		<include refid="Base_Column_List" />
		from disease_history
		<where>
			<![CDATA[
				del_flag = ${@com.foundation.common.bean.Constants@DEL_FLAG_NORMAL}
			]]>
		</where>
		order by create_date desc
	</select>
	<!-- 查询 -->
	<select id="queryList" parameterType="map"
		resultType="com.foundation.dao.entity.medicalHistory.DiseaseHistory">
		select
		<include refid="Base_Column_List" />
		from disease_history
		<where>
			<![CDATA[
				del_flag = ${@com.foundation.common.bean.Constants@DEL_FLAG_NORMAL}
			]]>
		</where>
	</select>
	<!-- 获取数量 -->
	<select id="getCount" parameterType="map"
		resultType="java.lang.Integer">
		select count(1) from disease_history
		<where>
			<![CDATA[
			del_flag = ${@com.foundation.common.bean.Constants@DEL_FLAG_NORMAL}
			]]>
		</where>
	</select>
</mapper>